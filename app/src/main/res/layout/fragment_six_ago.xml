<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#EDD491"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_find_info"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textSize="36sp"
        android:text="Vaqtni to'g'ri toping"
        android:textColor="#047809"
        android:textStyle="bold|italic"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/iv_clock"
        app:layout_constraintTop_toBottomOf="@id/tv_find_info"
        android:layout_margin="40dp"
        app:layout_constraintDimensionRatio="H, 1:1"
        android:layout_width="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/im_clock_03_10"
        android:layout_height="0dp"/>

    <LinearLayout
        android:id="@+id/ll_answers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/tv_answer_1"
            android:text="10:00"
            android:gravity="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="32sp"
            android:letterSpacing="0.08"
            android:background="@drawable/bg_for_answers"
            android:layout_width="wrap_content"
            android:paddingHorizontal="10dp"
            android:layout_height="75dp"/>

        <TextView
            android:id="@+id/tv_answer_2"
            android:text="10:00"
            android:gravity="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginHorizontal="8dp"
            android:textSize="32sp"
            android:letterSpacing="0.08"
            android:background="@drawable/bg_for_answers"
            android:layout_width="wrap_content"
            android:paddingHorizontal="10dp"
            android:layout_height="75dp"/>

        <TextView
            android:id="@+id/tv_answer_3"
            android:text="10:00"
            android:gravity="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="32sp"
            android:letterSpacing="0.08"
            android:background="@drawable/bg_for_answers"
            android:layout_width="wrap_content"
            android:paddingHorizontal="10dp"
            android:layout_height="75dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>